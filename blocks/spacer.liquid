{% doc %}
  Renders a spacer block for adding vertical or horizontal spacing.

  @example
  {% content_for 'block', type: 'spacer', id: 'spacer' %}
{% enddoc %}

<div 
  class="spacer {{ block.settings.spacer_direction }}"
  style="
    {% if block.settings.spacer_direction == 'vertical' %}
      height: {{ block.settings.spacer_size }}px;
    {% else %}
      width: {{ block.settings.spacer_size }}px;
    {% endif %}
  "
  {{ block.shopify_attributes }}
></div>

{% schema %}
{
  "name": "t:general.spacer",
  "settings": [
    {
      "type": "select",
      "id": "spacer_direction",
      "label": "t:labels.spacer_direction",
      "default": "vertical",
      "options": [
        { "value": "vertical", "label": "t:options.spacer_direction.vertical" },
        { "value": "horizontal", "label": "t:options.spacer_direction.horizontal" }
      ]
    },
    {
      "type": "range",
      "id": "spacer_size",
      "label": "t:labels.spacer_size",
      "min": 10,
      "max": 200,
      "step": 10,
      "default": 40,
      "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "t:general.spacer",
      "category": "t:general.layout"
    }
  ]
}
{% endschema %}
