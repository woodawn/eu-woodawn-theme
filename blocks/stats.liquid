      "default": "Projects"
    },
    {
      "type": "text",
      "id": "stat_3_value",
      "label": "Statistic 3 - Value",
      "default": "1000+"
    },
    {
      "type": "text",
      "id": "stat_3_label",
      "label": "Statistic 3 - Label",
      "default": "Customers"
    },
    {
      "type": "text",
      "id": "stat_4_value",
