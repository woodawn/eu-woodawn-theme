{% doc %}
  Stats block displays key statistics using daisyUI components in a responsive grid layout.

  @example
  {% content_for 'block', type: 'stats', id: 'company-stats' %}
{% enddoc %}

<div
  class="py-12 sm:py-16 lg:py-20"
  style="background-color: {{ block.settings.background_color | default: 'hsl(var(--b1))' }};"
  {{ block.shopify_attributes }}
>
  <div class="container mx-auto px-4">
    {% if block.settings.heading != blank or block.settings.description != blank %}
      <div class="text-center mb-8 md:mb-12">
        {% if block.settings.heading != blank %}
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4">
            {{ block.settings.heading | escape }}
          </h2>
        {% endif %}

        {% if block.settings.description != blank %}
          <div class="max-w-2xl mx-auto text-lg opacity-80">
            {{ block.settings.description }}
          </div>
        {% endif %}
      </div>
    {% endif %}

    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6 lg:gap-8">
      {% for i in (1..4) %}
        {% liquid
          assign stat_value_key = 'stat_' | append: i | append: '_value'
          assign stat_label_key = 'stat_' | append: i | append: '_label'
          assign stat_value = block.settings[stat_value_key]
          assign stat_label = block.settings[stat_label_key]
        %}

        {% if stat_value != blank and stat_label != blank %}
          <div class="card bg-base-200 shadow-lg">
            <div class="card-body text-center p-4 md:p-6">
              <div class="stat-value text-2xl md:text-3xl lg:text-4xl font-bold text-primary mb-2">
                {{ stat_value | escape }}
              </div>
              <div class="stat-desc text-sm md:text-base font-semibold">
                {{ stat_label | escape }}
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Stats",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our team by the numbers"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>This is a section of some simple filler text, also known as placeholder text. It shares some characteristics of a real written text but is random or otherwise generated.</p>"
    },
    {
      "type": "header",
      "content": "Statistics"
    },
    {
