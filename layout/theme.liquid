<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {% # Social, title, etc. %}
    {% render 'meta-tags' %}

    {% # Inlined CSS Variables %}
    {% render 'css-variables' %}

    {% # Load and preload the critical CSS %}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}

    {{ content_for_header }}

    {% render 'vite-mixer' %}
  </head>

  <body>
    {% sections 'header-group' %}

    {{ content_for_layout }}

    {% sections 'footer-group' %}

    <!-- Cart Drawer -->
    {% render 'cart-drawer' %}

    <!-- Cart JavaScript -->
    <script src="{{ 'cart.js' | asset_url }}" defer></script>

    <!-- Lazy Loading JavaScript -->
    <script src="{{ 'lazy-load.js' | asset_url }}" defer></script>

    <!-- Search Suggestions JavaScript -->
    <script src="{{ 'search-suggestions.js' | asset_url }}" defer></script>
    
    <!-- Wishlist JavaScript -->
    <script src="{{ 'wishlist.js' | asset_url }}" defer></script>
  </body>
</html>
