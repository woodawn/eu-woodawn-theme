{% comment %}
  This section is used in the 404 template to render page shown when customers
  enter an invalid store URL.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/404
{% endcomment %}

<div class="min-h-screen flex items-center justify-center bg-base-200">
  <div class="text-center">
    <h1 class="text-6xl font-bold mb-4">{{ '404.title' | t }}</h1>
    <p class="text-xl mb-8">{{ '404.not_found' | t }}</p>
    <a href="{{ routes.all_products_collection_url }}" class="btn btn-primary btn-lg">
      {{ '404.back_to_shopping' | t }}
    </a>
  </div>
</div>

{% schema %}
{
  "name": "t:general.404",
  "settings": []
}
{% endschema %}
