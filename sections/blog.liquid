{% comment %}
  This section is used in the blog template to render the blog page listing all
  articles within a blog.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/blog
{% endcomment %}

<div class="container mx-auto p-6">
  <h1 class="text-4xl font-bold mb-8">{{ blog.title }}</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {% paginate blog.articles by 5 %}
      {% for article in blog.articles %}
        <article class="card bg-base-100 shadow-xl">
          {% if article.image %}
            <figure class="px-10 pt-10">
              {{ article.image | image_url: width: 1000 | image_tag: class: 'rounded-xl' }}
            </figure>
          {% endif %}
          <div class="card-body">
            <h2 class="card-title">
              {{ article.title | link_to: article.url }}
            </h2>
            {% assign date = article.published_at | time_tag: format: 'date' %}
            <p class="text-sm opacity-70">{{ 'blog.article_metadata_html' | t: date: date, author: article.author }}</p>
            <p class="mt-4">{{ article.excerpt }}</p>
            <div class="card-actions justify-end">
              <a href="{{ article.url }}" class="btn btn-primary">阅读更多</a>
            </div>
          </div>
        </article>
      {% endfor %}

      <div class="col-span-full flex justify-center mt-8">
        {%- if paginate.pages > 1 -%}
          {{- paginate | default_pagination -}}
        {%- endif -%}
      </div>
    {% endpaginate %}
  </div>
</div>

{% schema %}
{
  "name": "t:general.blog",
  "settings": []
}
{% endschema %}
