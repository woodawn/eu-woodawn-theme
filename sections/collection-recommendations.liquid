{% comment %}
  Collection Recommendations Section
  Shows related or recommended products for the current collection
{% endcomment %}

{% if collection.products.size > 0 %}
  <div class="py-20 bg-base-200/50">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-bold mb-4">
          {{ section.settings.heading | default: 'You might also like' }}
        </h2>
        <p class="text-lg text-base-content/70 max-w-2xl mx-auto">
          {{ section.settings.subheading | default: 'Discover more products that complement your selection' }}
        </p>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {% assign recommended_products = collections[section.settings.recommended_collection].products
          | default: collection.products
        %}
        {% for product in recommended_products limit: section.settings.products_to_show %}
          <div class="card bg-base-100 shadow-lg hover:shadow-xl transition-all duration-300 group">
            <figure class="relative overflow-hidden">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 300 }}"
                  alt="{{ product.featured_image.alt | default: product.title }}"
                  class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300"
                  width="300"
                  height="192"
                  loading="lazy"
                >
              {% endif %}

              <!-- Sale Badge -->
              {% if product.compare_at_price > product.price %}
                <div class="absolute top-3 left-3">
                  <div class="badge badge-error badge-sm">
                    {{
                      product.compare_at_price
                      | minus: product.price
                      | times: 100
                      | divided_by: product.compare_at_price
                      | round
                    -}}
                    % OFF
                  </div>
                </div>
              {% endif %}

              <!-- Quick View Button -->
              <div class="absolute top-3 right-3 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <button class="btn btn-circle btn-primary btn-sm" onclick="quickView('{{ product.id }}')">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                </button>
              </div>
            </figure>

            <div class="card-body p-4">
              <h3 class="card-title text-base line-clamp-2">
                <a href="{{ product.url }}" class="hover:text-primary transition-colors">
                  {{ product.title }}
                </a>
              </h3>

              <!-- Product Rating (if available) -->
              {% if product.metafields.reviews.rating.value %}
                <div class="flex items-center gap-2 mt-2">
                  <div class="rating rating-xs">
                    {% assign rating = product.metafields.reviews.rating.value %}
                    {% for i in (1..5) %}
                      {% if i <= rating %}
                        <input type="radio" class="mask mask-star-2 bg-warning" disabled>
                      {% else %}
                        <input type="radio" class="mask mask-star-2 bg-base-300" disabled>
                      {% endif %}
                    {% endfor %}
                  </div>
                  <span class="text-xs text-base-content/70"
                    >({{ product.metafields.reviews.rating_count.value }})</span
                  >
                </div>
              {% endif %}

              <!-- Price -->
              <div class="flex items-center justify-between mt-3">
                <div class="flex items-center gap-2">
                  {% if product.compare_at_price > product.price %}
                    <span class="text-lg font-bold text-primary">{{ product.price | money }}</span>
                    <span class="text-sm text-base-content/50 line-through">
                      {{- product.compare_at_price | money -}}
                    </span>
                  {% else %}
                    <span class="text-lg font-bold text-primary">{{ product.price | money }}</span>
                  {% endif %}
                </div>

                {% unless product.available %}
                  <span class="badge badge-error badge-sm">Sold Out</span>
                {% endunless %}
              </div>

              <!-- Quick Add Button -->
              <div class="card-actions justify-end mt-4">
                {% if product.available %}
                  <form action="{{ routes.cart_add_url }}" method="post" enctype="multipart/form-data" class="w-full">
                    <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                    <button type="submit" class="btn btn-primary btn-sm w-full">
                      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 5M7 13l2.5 5m6-5v6a2 2 0 01-2 2H9a2 2 0 01-2-2v-6m8 0V9a2 2 0 00-2-2H9a2 2 0 00-2 2v4.01"></path>
                      </svg>
                      Add to Cart
                    </button>
                  </form>
                {% else %}
                  <button class="btn btn-disabled btn-sm w-full">Sold Out</button>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>

      {% if section.settings.show_view_all and section.settings.recommended_collection != blank %}
        <div class="text-center mt-12">
          <a
            href="{{ collections[section.settings.recommended_collection].url }}"
            class="btn btn-outline btn-lg"
          >
            View All {{ collections[section.settings.recommended_collection].title }}
          </a>
        </div>
      {% endif %}
    </div>
  </div>
{% endif %}

{% stylesheet %}
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
{% endstylesheet %}

{% javascript %}
  function quickView(productId) {
    // Implement quick view functionality
    console.log('Quick view for product:', productId);
    // This could open a modal with product details
  }
{% endjavascript %}

{% schema %}
{
  "name": "Product Recommendations",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "You might also like"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover more products that complement your selection"
    },
    {
      "type": "collection",
      "id": "recommended_collection",
      "label": "Recommended collection",
      "info": "Leave empty to use current collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Number of products to show",
      "min": 2,
      "max": 8,
      "step": 2,
      "default": 4
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View All' button",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Collection Recommendations"
    }
  ]
}
{% endschema %}
