{% comment %}
  Typhur-inspired Collection Page
  Features: Advanced filtering, sorting, enhanced product cards, and modern design
{% endcomment %}

<div class="min-h-screen bg-base-100">
  <!-- Collection Header -->
  <div class="bg-gradient-to-r from-primary/10 to-secondary/10 py-16">
    <div class="container mx-auto px-6">
      <div class="text-center max-w-4xl mx-auto">
        <h1 class="text-4xl lg:text-6xl font-bold mb-6">{{ collection.title }}</h1>
        {% if collection.description != blank %}
          <p class="text-xl text-base-content/70 mb-8">{{ collection.description }}</p>
        {% endif %}

        <!-- Collection Stats -->
        <div class="flex flex-wrap justify-center gap-8 text-center">
          <div class="stat bg-base-100/50 backdrop-blur-sm rounded-2xl px-6 py-4">
            <div class="stat-value text-primary">{{ collection.products_count }}</div>
            <div class="stat-title">Products</div>
          </div>
          <div class="stat bg-base-100/50 backdrop-blur-sm rounded-2xl px-6 py-4">
            <div class="stat-value text-secondary">{{ collection.products | where: 'available', true | size }}</div>
            <div class="stat-title">In Stock</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Filters and Sorting -->
  <div class="container mx-auto px-6 py-8">
    <div class="flex flex-col lg:flex-row gap-6 mb-8">
      <!-- Filter Toggle Button (Mobile) -->
      <div class="lg:hidden">
        <button class="btn btn-outline" onclick="document.getElementById('filters').classList.toggle('hidden')">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
          </svg>
          {{ 'collections.filters.title' | t }}
        </button>
      </div>

      <!-- Filters Sidebar -->
      <div id="filters" class="lg:block hidden lg:w-1/4">
        <div class="bg-base-100 rounded-2xl shadow-lg p-6 sticky top-8">
          <h3 class="text-xl font-bold mb-6">Filters</h3>

          <!-- Price Range -->
          <div class="mb-6">
            <h4 class="font-semibold mb-3">Price Range</h4>
            <div class="space-y-2">
              <label class="flex items-center gap-3">
                <input type="radio" name="price" value="all" class="radio radio-primary" checked>
                <span>All Prices</span>
              </label>
              <label class="flex items-center gap-3">
                <input type="radio" name="price" value="under-100" class="radio radio-primary">
                <span>Under $100</span>
              </label>
              <label class="flex items-center gap-3">
                <input type="radio" name="price" value="100-300" class="radio radio-primary">
                <span>$100 - $300</span>
              </label>
              <label class="flex items-center gap-3">
                <input type="radio" name="price" value="over-300" class="radio radio-primary">
                <span>Over $300</span>
              </label>
            </div>
          </div>

          <!-- Availability -->
          <div class="mb-6">
            <h4 class="font-semibold mb-3">Availability</h4>
            <div class="space-y-2">
              <label class="flex items-center gap-3">
                <input type="checkbox" class="checkbox checkbox-primary" checked>
                <span>In Stock</span>
              </label>
              <label class="flex items-center gap-3">
                <input type="checkbox" class="checkbox checkbox-primary">
                <span>On Sale</span>
              </label>
            </div>
          </div>

          <!-- Product Type -->
          {% if collection.all_types.size > 0 %}
            <div class="mb-6">
              <h4 class="font-semibold mb-3">Product Type</h4>
              <div class="space-y-2">
                {% for type in collection.all_types %}
                  <label class="flex items-center gap-3">
                    <input type="checkbox" class="checkbox checkbox-primary">
                    <span>{{ type }}</span>
                  </label>
                {% endfor %}
              </div>
            </div>
          {% endif %}

          <!-- Clear Filters -->
          <button class="btn btn-outline btn-sm w-full">{{ 'collections.filters.clear_all' | t }}</button>
        </div>
      </div>

      <!-- Products Grid -->
      <div class="lg:w-3/4">
        <!-- Sort and View Options -->
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-6">
          <div class="flex items-center gap-4">
            <span class="text-sm text-base-content/70"> Showing {{ collection.products | size }} products </span>
          </div>

          <div class="flex items-center gap-4">
            <!-- Sort Dropdown -->
            <div class="dropdown dropdown-end">
              <label tabindex="0" class="btn btn-outline btn-sm">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4h13M3 8h9m-9 4h6m4 0l4-4m0 0l4 4m-4-4v12"></path>
                </svg>
                {{ 'collections.sorting.title' | t }}
              </label>
              <ul tabindex="0" class="dropdown-content menu p-2 shadow bg-base-100 rounded-box w-52">
                <li>
                  <a href="?sort_by=best-selling">{{ 'collections.sorting.best_selling' | t }}</a>
                </li>
                <li>
                  <a href="?sort_by=title-ascending">{{ 'collections.sorting.name_asc' | t }}</a>
                </li>
                <li>
                  <a href="?sort_by=title-descending">{{ 'collections.sorting.name_desc' | t }}</a>
                </li>
                <li>
                  <a href="?sort_by=price-ascending">{{ 'collections.sorting.price_asc' | t }}</a>
                </li>
                <li>
                  <a href="?sort_by=price-descending">{{ 'collections.sorting.price_desc' | t }}</a>
                </li>
                <li>
                  <a href="?sort_by=created-descending">{{ 'collections.sorting.newest' | t }}</a>
                </li>
              </ul>
            </div>

            <!-- View Toggle -->
            <div class="btn-group">
              <button class="btn btn-sm btn-active" data-view="grid">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path>
                </svg>
              </button>
              <button class="btn btn-sm" data-view="list">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
                </svg>
              </button>
            </div>
          </div>
        </div>

        <!-- Products Grid -->
        {% paginate collection.products by 12 %}
          <div id="products-grid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for product in collection.products %}
              <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-all duration-300 group product-card">
                <figure class="relative overflow-hidden">
                  {% if product.featured_image %}
                    <img
                      src="{{ product.featured_image | image_url: width: 400 }}"
                      alt="{{ product.featured_image.alt | default: product.title }}"
                      class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-300"
                      width="400"
                      height="256"
                      loading="lazy"
                    >
                  {% endif %}

                  <!-- Sale Badge -->
                  {% if product.compare_at_price > product.price %}
                    <div class="absolute top-4 left-4">
                      <div class="badge badge-error">
                        {{
                          product.compare_at_price
                          | minus: product.price
                          | times: 100
                          | divided_by: product.compare_at_price
                          | round
                        -}}
                        % OFF
                      </div>
                    </div>
                  {% endif %}

                  <!-- Wishlist Button -->
                  <div class="absolute top-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                    <button class="btn btn-circle btn-primary btn-sm" onclick="toggleWishlist('{{ product.id }}')">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                      </svg>
                    </button>
                  </div>

                  <!-- Quick Add Button -->
                  <div class="absolute bottom-4 left-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                    {% if product.available %}
                      <form action="{{ routes.cart_add_url }}" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                        <button type="submit" class="btn btn-primary w-full">
                          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 5M7 13l2.5 5m6-5v6a2 2 0 01-2 2H9a2 2 0 01-2-2v-6m8 0V9a2 2 0 00-2-2H9a2 2 0 00-2 2v4.01"></path>
                          </svg>
                          {{ 'products.quick_add' | t }}
                        </button>
                      </form>
                    {% else %}
                      <button class="btn btn-disabled w-full">{{ 'products.sold_out' | t }}</button>
                    {% endif %}
                  </div>
                </figure>

                <div class="card-body">
                  <h3 class="card-title text-lg line-clamp-2">
                    <a href="{{ product.url }}" class="hover:text-primary transition-colors">
                      {{ product.title }}
                    </a>
                  </h3>

                  {% if product.description != blank %}
                    <p class="text-sm text-base-content/70 line-clamp-2">
                      {{ product.description | strip_html | truncatewords: 15 }}
                    </p>
                  {% endif %}

                  <!-- Product Rating (if available) -->
                  {% if product.metafields.reviews.rating.value %}
                    <div class="flex items-center gap-2 mt-2">
                      <div class="rating rating-sm">
                        {% assign rating = product.metafields.reviews.rating.value %}
                        {% for i in (1..5) %}
                          {% if i <= rating %}
                            <input type="radio" class="mask mask-star-2 bg-warning" disabled>
                          {% else %}
                            <input type="radio" class="mask mask-star-2 bg-base-300" disabled>
                          {% endif %}
                        {% endfor %}
                      </div>
                      <span class="text-sm text-base-content/70"
                        >({{ product.metafields.reviews.rating_count.value }})</span
                      >
                    </div>
                  {% endif %}

                  <!-- Price -->
                  <div class="flex items-center justify-between mt-4">
                    <div class="flex items-center gap-2">
                      {% if product.compare_at_price > product.price %}
                        <span class="text-lg font-bold text-primary">{{ product.price | money }}</span>
                        <span class="text-sm text-base-content/50 line-through">
                          {{- product.compare_at_price | money -}}
                        </span>
                      {% else %}
                        <span class="text-lg font-bold text-primary">{{ product.price | money }}</span>
                      {% endif %}
                    </div>

                    {% unless product.available %}
                      <span class="badge badge-error">{{ 'products.sold_out' | t }}</span>
                    {% endunless %}
                  </div>

                  <!-- Product Variants (if multiple) -->
                  {% if product.variants.size > 1 %}
                    <div class="mt-3">
                      <div class="flex flex-wrap gap-1">
                        {% for variant in product.variants limit: 4 %}
                          <div
                            class="w-6 h-6 rounded-full border-2 border-base-300"
                            style="background-color: {{ variant.option1 | downcase }};"
                            title="{{ variant.title }}"
                          ></div>
                        {% endfor %}
                        {% if product.variants.size > 4 %}
                          <span class="text-xs text-base-content/70">+{{ product.variants.size | minus: 4 }} more</span>
                        {% endif %}
                      </div>
                    </div>
                  {% endif %}

                  <div class="card-actions justify-end mt-4">
                    <a href="{{ product.url }}" class="btn btn-outline btn-sm">{{ 'products.view_details' | t }}</a>
                  </div>
                </div>
              </div>
            {% else %}
              <!-- Empty State -->
              <div class="col-span-full text-center py-16">
                <div class="max-w-md mx-auto">
                  <svg
                    class="w-24 h-24 mx-auto text-base-content/30 mb-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                  </svg>
                  <h3 class="text-xl font-semibold mb-2">{{ 'collections.no_products.title' | t }}</h3>
                  <p class="text-base-content/70 mb-6">{{ 'collections.no_products.description' | t }}</p>
                  <button class="btn btn-primary" onclick="clearAllFilters()">
                    {{ 'collections.filters.clear' | t }}
                  </button>
                </div>
              </div>
            {% endfor %}
          </div>

          <!-- Pagination -->
          {% if paginate.pages > 1 %}
            <div class="flex justify-center mt-12">
              <div class="join">
                {% if paginate.previous %}
                  <a href="{{ paginate.previous.url }}" class="join-item btn">«</a>
                {% endif %}

                {% for part in paginate.parts %}
                  {% if part.is_link %}
                    <a href="{{ part.url }}" class="join-item btn">{{ part.title }}</a>
                  {% else %}
                    <span class="join-item btn btn-active">{{ part.title }}</span>
                  {% endif %}
                {% endfor %}

                {% if paginate.next %}
                  <a href="{{ paginate.next.url }}" class="join-item btn">»</a>
                {% endif %}
              </div>
            </div>
          {% endif %}
        {% endpaginate %}
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .product-card {
    transition: all 0.3s ease;
  }

  .product-card:hover {
    transform: translateY(-4px);
  }

  /* List View Styles */
  .list-view .product-card {
    display: flex;
    flex-direction: row;
  }

  .list-view .product-card figure {
    width: 200px;
    height: 150px;
    flex-shrink: 0;
  }

  .list-view .product-card .card-body {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
{% endstylesheet %}

{% javascript %}
  // View Toggle Functionality
  document.addEventListener('DOMContentLoaded', function () {
    const viewButtons = document.querySelectorAll('[data-view]');
    const productsGrid = document.getElementById('products-grid');

    viewButtons.forEach((button) => {
      button.addEventListener('click', function () {
        const view = this.dataset.view;

        // Update active button
        viewButtons.forEach((btn) => btn.classList.remove('btn-active'));
        this.classList.add('btn-active');

        // Update grid layout
        if (view === 'list') {
          productsGrid.classList.add('list-view');
          productsGrid.classList.remove('grid-cols-1', 'sm:grid-cols-2', 'lg:grid-cols-3');
        } else {
          productsGrid.classList.remove('list-view');
          productsGrid.classList.add('grid-cols-1', 'sm:grid-cols-2', 'lg:grid-cols-3');
        }
      });
    });
  });

  // Wishlist Functionality
  function toggleWishlist(productId) {
    // Implement wishlist functionality
    console.log('Toggle wishlist for product:', productId);
  }

  // Clear Filters Functionality
  function clearAllFilters() {
    // Clear all filter inputs
    document.querySelectorAll('input[type="radio"], input[type="checkbox"]').forEach((input) => {
      input.checked = false;
    });

    // Reset to default state
    document.querySelector('input[name="price"][value="all"]').checked = true;
    document.querySelector('input[type="checkbox"]').checked = true;
  }
{% endjavascript %}

{% schema %}
{
  "name": "Collection Page",
  "settings": [
    {
      "type": "header",
      "content": "Collection Settings"
    },
    {
      "type": "checkbox",
      "id": "show_collection_description",
      "label": "Show collection description",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_collection_stats",
      "label": "Show collection statistics",
      "default": true
    },
    {
      "type": "header",
      "content": "Filter Settings"
    },
    {
      "type": "checkbox",
      "id": "enable_filters",
      "label": "Enable product filters",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_price_filter",
      "label": "Enable price range filter",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_availability_filter",
      "label": "Enable availability filter",
      "default": true
    },
    {
      "type": "header",
      "content": "Product Display"
    },
    {
      "type": "range",
      "id": "products_per_page",
      "label": "Products per page",
      "min": 12,
      "max": 48,
      "step": 12,
      "default": 12
    },
    {
      "type": "checkbox",
      "id": "show_quick_add",
      "label": "Show quick add button",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_wishlist",
      "label": "Show wishlist button",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_product_ratings",
      "label": "Show product ratings",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Collection Page"
    }
  ]
}
{% endschema %}
