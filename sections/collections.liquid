{% comment %}
  This section is used in the list-collections template to render a list of
  collections.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/collection
{% endcomment %}

<div class="container mx-auto p-6">
  <h1 class="text-4xl font-bold mb-8">{{ 'collections.title' | t }}</h1>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
    {% for collection in collections %}
      <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow">
        <a href="{{ collection.url }}" class="block">
          {% if collection.featured_image %}
            <figure class="px-10 pt-10">
              {% render 'image',
                class: 'rounded-xl',
                image: collection.featured_image,
                width: 600,
                height: 600,
                crop: 'center'
              %}
            </figure>
          {% endif %}
          <div class="card-body">
            <h2 class="card-title">{{ collection.title }}</h2>
            {% if collection.description %}
              <p class="text-sm opacity-70">{{ collection.description | strip_html | truncatewords: 15 }}</p>
            {% endif %}
            <div class="card-actions justify-end">
              <span class="btn btn-primary btn-sm">查看商品</span>
            </div>
          </div>
        </a>
      </div>
    {% endfor %}
  </div>
</div>

{% stylesheet %}
  /* daisyUI组件样式已足够，无需额外CSS */
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.collections_grid",
  "settings": [],
  "presets": [{ "name": "t:general.collections_grid" }]
}
{% endschema %}
