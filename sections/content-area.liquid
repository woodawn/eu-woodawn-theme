{% comment %}
  Generic content area section using blocks for maximum flexibility
  Features: Modular design with all available blocks
{% endcomment %}

<div class="content-area py-20 {{ section.settings.background_color }}">
  <div class="container mx-auto px-6">
    {% if section.settings.heading != blank or section.settings.subheading != blank %}
      <div class="text-center mb-16">
        {% if section.settings.heading != blank %}
          <h2 class="text-4xl lg:text-5xl font-bold mb-6">
            {{ section.settings.heading }}
          </h2>
        {% endif %}
        {% if section.settings.subheading != blank %}
          <p class="text-xl text-base-content/70 max-w-2xl mx-auto">
            {{ section.settings.subheading }}
          </p>
        {% endif %}
      </div>
    {% endif %}

    <div class="content-blocks">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'text' %}
            {% render 'text', block: block %}
          {% when 'button' %}
            {% render 'button', block: block %}
          {% when 'image' %}
            {% render 'image', block: block %}
          {% when 'group' %}
            {% render 'group', block: block %}
          {% when 'spacer' %}
            {% render 'spacer', block: block %}
          {% when 'divider' %}
            {% render 'divider', block: block %}
          {% when 'hero-feature' %}
            {% render 'hero-feature', block: block %}
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Content Area",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "select",
      "id": "background_color",
      "label": "Background Color",
      "default": "bg-base-100",
      "options": [
        { "value": "bg-base-100", "label": "Base 100" },
        { "value": "bg-base-200", "label": "Base 200" },
        { "value": "bg-primary", "label": "Primary" },
        { "value": "bg-secondary", "label": "Secondary" },
        { "value": "bg-accent", "label": "Accent" }
      ]
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Text"
        },
        {
          "type": "select",
          "id": "text_style",
          "label": "Text Style",
          "options": [
            { "value": "text-4xl font-bold", "label": "Title" },
            { "value": "text-2xl font-semibold", "label": "Subtitle" },
            { "value": "text-base", "label": "Normal" }
          ],
          "default": "text-4xl font-bold"
        },
        {
          "type": "text_alignment",
          "id": "alignment",
          "label": "Alignment",
          "default": "left"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Button"
        },
        {
          "type": "url",
          "id": "url",
          "label": "URL"
        },
        {
          "type": "select",
          "id": "button_style",
          "label": "Button Style",
          "default": "btn-primary",
          "options": [
            { "value": "btn-primary", "label": "Primary" },
            { "value": "btn-secondary", "label": "Secondary" },
            { "value": "btn-accent", "label": "Accent" },
            { "value": "btn-outline", "label": "Outline" },
            { "value": "btn-ghost", "label": "Ghost" },
            { "value": "btn-link", "label": "Link" }
          ]
        },
        {
          "type": "select",
          "id": "button_size",
          "label": "Button Size",
          "default": "btn-md",
          "options": [
            { "value": "btn-xs", "label": "Extra Small" },
            { "value": "btn-sm", "label": "Small" },
            { "value": "btn-md", "label": "Medium" },
            { "value": "btn-lg", "label": "Large" },
            { "value": "btn-xl", "label": "Extra Large" }
          ]
        }
      ]
    },
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt Text"
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Caption"
        },
        {
          "type": "url",
          "id": "url",
          "label": "URL"
        }
      ]
    },
    {
      "type": "group",
      "name": "Group",
      "settings": [
        {
          "type": "select",
          "id": "layout_direction",
          "label": "Layout Direction",
          "default": "flex flex-col",
          "options": [
            { "value": "flex flex-row justify-between items-center", "label": "Horizontal" },
            { "value": "flex flex-col", "label": "Vertical" }
          ]
        },
        {
          "type": "select",
          "id": "alignment",
          "label": "Alignment",
          "default": "items-start",
          "options": [
            { "value": "items-start", "label": "Left" },
            { "value": "items-center", "label": "Center" },
            { "value": "items-end", "label": "Right" }
          ]
        },
        {
          "type": "range",
          "id": "padding",
          "label": "Padding",
          "default": 0,
          "min": 0,
          "max": 200,
          "step": 2,
          "unit": "px"
        }
      ]
    },
    {
      "type": "spacer",
      "name": "Spacer",
      "settings": [
        {
          "type": "select",
          "id": "spacer_direction",
          "label": "Spacer Direction",
          "default": "vertical",
          "options": [
            { "value": "vertical", "label": "Vertical" },
            { "value": "horizontal", "label": "Horizontal" }
          ]
        },
        {
          "type": "range",
          "id": "spacer_size",
          "label": "Spacer Size",
          "min": 10,
          "max": 200,
          "step": 10,
          "default": 40,
          "unit": "px"
        }
      ]
    },
    {
      "type": "divider",
      "name": "Divider",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "select",
          "id": "divider_style",
          "label": "Divider Style",
          "default": "",
          "options": [
            { "value": "", "label": "Solid" },
            { "value": "divider-dash", "label": "Dashed" }
          ]
        },
        {
          "type": "select",
          "id": "divider_color",
          "label": "Divider Color",
          "default": "divider-neutral",
          "options": [
            { "value": "divider-neutral", "label": "Neutral" },
            { "value": "divider-primary", "label": "Primary" },
            { "value": "divider-secondary", "label": "Secondary" },
            { "value": "divider-accent", "label": "Accent" }
          ]
        }
      ]
    },
    {
      "type": "hero_feature",
      "name": "Hero Feature",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Feature"
        },
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "default": "check",
          "options": [
            { "value": "check", "label": "Check" },
            { "value": "star", "label": "Star" },
            { "value": "shield", "label": "Shield" },
            { "value": "truck", "label": "Truck" },
            { "value": "clock", "label": "Clock" },
            { "value": "heart", "label": "Heart" }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Content Area",
      "blocks": [
        {
          "type": "text",
          "settings": {
            "text": "Welcome to Our Store",
            "text_style": "text-4xl font-bold",
            "alignment": "center"
          }
        },
        {
          "type": "spacer",
          "settings": {
            "spacer_direction": "vertical",
            "spacer_size": 20
          }
        },
        {
          "type": "text",
          "settings": {
            "text": "Discover amazing products and exceptional quality.",
            "text_style": "text-base",
            "alignment": "center"
          }
        },
        {
          "type": "spacer",
          "settings": {
            "spacer_direction": "vertical",
            "spacer_size": 40
          }
        },
        {
          "type": "button",
          "settings": {
            "text": "Shop Now",
            "button_style": "btn-primary",
            "button_size": "btn-lg"
          }
        }
      ]
    }
  ]
}
{% endschema %}
