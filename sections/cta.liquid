{% comment %}
  Call-to-Action section inspired by Typhur's conversion-focused design
  Features: Compelling CTA with background image and strong messaging
{% endcomment %}

<div
  class="hero py-20 min-h-[600px] {% if section.settings.background_image %}bg-cover bg-center{% else %}bg-gradient-to-r from-primary to-secondary{% endif %}"
  {% if section.settings.background_image %}
    style="background-image: url('{{ section.settings.background_image | image_url: width: 1920 }}')"
  {% endif %}
>
  {% if section.settings.background_image %}
    <div class="hero-overlay bg-black/50"></div>
  {% endif %}
  <div class="hero-content text-center text-white">
    <div class="max-w-4xl">
      {% if section.settings.badge_text != blank %}
        <div class="badge badge-primary badge-lg font-semibold mb-6">
          {{ section.settings.badge_text }}
        </div>
      {% endif %}

      <h2 class="text-4xl lg:text-6xl font-bold mb-6">
        {{ section.settings.headline | default: 'Ready to Transform Your Kitchen?' }}
      </h2>

      <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
        {{
          section.settings.subheadline
          | default: 'Join thousands of satisfied customers and experience the future of cooking today.'
        }}
      </p>

      <div class="join join-vertical sm:join-horizontal gap-4 mb-8">
        <a
          href="{{ section.settings.primary_cta_url | default: '/collections/all' }}"
          class="btn btn-primary btn-lg join-item"
        >
          {{ section.settings.primary_cta_text | default: 'Shop Now' }}
        </a>
        {% if section.settings.secondary_cta_text != blank %}
          <a
            href="{{ section.settings.secondary_cta_url | default: '/pages/about' }}"
            class="btn btn-outline btn-lg join-item text-white border-white hover:bg-white hover:text-primary"
          >
            {{ section.settings.secondary_cta_text }}
          </a>
        {% endif %}
      </div>

      {% if section.settings.features != blank %}
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 text-white/80">
          {% assign features_array = section.settings.features | split: ',' %}
          {% for feature in features_array %}
            <div class="flex items-center justify-center gap-2">
              <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-sm font-medium">{{ feature | strip }}</span>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Call to Action",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "Limited Time Offer"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "Ready to Transform Your Kitchen?"
    },
    {
      "type": "textarea",
      "id": "subheadline",
      "label": "Subheadline",
      "default": "Join thousands of satisfied customers and experience the future of cooking today."
    },
    {
      "type": "text",
      "id": "primary_cta_text",
      "label": "Primary CTA Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "primary_cta_url",
      "label": "Primary CTA URL"
    },
    {
      "type": "text",
      "id": "secondary_cta_text",
      "label": "Secondary CTA Text"
    },
    {
      "type": "url",
      "id": "secondary_cta_url",
      "label": "Secondary CTA URL"
    },
    {
      "type": "text",
      "id": "features",
      "label": "Features (comma separated)",
      "default": "Free Shipping,30-Day Returns,5-Year Warranty"
    }
  ],
  "presets": [
    {
      "name": "Call to Action"
    }
  ]
}
{% endschema %}
