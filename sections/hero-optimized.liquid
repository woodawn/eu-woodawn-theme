{% comment %}
  Optimized Hero section using blocks for better flexibility
  Features: Modular design with reusable blocks
{% endcomment %}

<div class="hero min-h-screen bg-gradient-to-br from-base-100 to-base-200">
  <div class="hero-content flex-col lg:flex-row-reverse max-w-7xl mx-auto">
    <div class="lg:w-1/2">
      <div class="indicator">
        {% if section.settings.badge_text != blank %}
          <span class="indicator-item indicator-start badge badge-primary badge-lg font-semibold">
            {{ section.settings.badge_text }}
          </span>
        {% endif %}
        <img
          src="{{ section.settings.hero_image | image_url: width: 800 }}"
          alt="{{ section.settings.hero_image.alt | default: 'Hero Product' }}"
          class="mask mask-squircle shadow-2xl w-full"
          width="800"
          height="600"
        >
      </div>
    </div>

    <div class="lg:w-1/2 lg:pr-12">
      <h1 class="text-5xl lg:text-6xl font-bold leading-tight mb-6">
        {{ section.settings.headline | default: 'Revolutionary Kitchen Innovation' }}
      </h1>

      <p class="text-xl text-base-content/80 mb-8 leading-relaxed">
        {{
          section.settings.subheadline
          | default: 'Experience the future of cooking with our cutting-edge technology that transforms your kitchen into a culinary powerhouse.'
        }}
      </p>

      <!-- CTA Buttons using blocks -->
      <div class="join join-vertical sm:join-horizontal gap-4 mb-8">
        {% for block in section.blocks %}
          {% if block.type == 'cta_button' %}
            {% if block.settings.url != blank %}
              <a
                href="{{ block.settings.url }}"
                class="btn {{ block.settings.button_style }} {{ block.settings.button_size }}"
                {{ block.shopify_attributes }}
              >
                {{ block.settings.text }}
              </a>
            {% else %}
              <button
                type="button"
                class="btn {{ block.settings.button_style }} {{ block.settings.button_size }}"
                {{ block.shopify_attributes }}
              >
                {{ block.settings.text }}
              </button>
            {% endif %}
          {% endif %}
        {% endfor %}
      </div>

      <!-- Features using blocks -->
      {% if section.blocks.size > 0 %}
        <div class="grid grid-cols-2 gap-4">
          {% for block in section.blocks %}
            {% if block.type == 'hero-feature' %}
              <div class="flex items-center gap-3" {{ block.shopify_attributes }}>
                <div class="avatar placeholder">
                  <div class="bg-primary text-primary-content rounded-full w-8">
                    {% if block.settings.icon == 'check' %}
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                    {% elsif block.settings.icon == 'star' %}
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                      </svg>
                    {% elsif block.settings.icon == 'shield' %}
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                      </svg>
                    {% elsif block.settings.icon == 'truck' %}
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M8 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM15 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z"></path>
                        <path d="M3 4a1 1 0 00-1 1v10a1 1 0 001 1h1.05a2.5 2.5 0 014.9 0H10a1 1 0 001-1V5a1 1 0 00-1-1H3zM14 7a1 1 0 00-1 1v6.05A2.5 2.5 0 0115.95 16H17a1 1 0 001-1v-5a1 1 0 00-.293-.707L16 7.586A1 1 0 0015.414 7H14z"></path>
                      </svg>
                    {% elsif block.settings.icon == 'clock' %}
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
                      </svg>
                    {% elsif block.settings.icon == 'heart' %}
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path>
                      </svg>
                    {% else %}
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                    {% endif %}
                  </div>
                </div>
                <span class="text-sm font-medium">{{ block.settings.text }}</span>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero Optimized",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "New"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "Revolutionary Kitchen Innovation"
    },
    {
      "type": "textarea",
      "id": "subheadline",
      "label": "Subheadline",
      "default": "Experience the future of cooking with our cutting-edge technology that transforms your kitchen into a culinary powerhouse."
    }
  ],
  "blocks": [
    {
      "type": "cta_button",
      "name": "CTA Button",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Button Text",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Button URL"
        },
        {
          "type": "select",
          "id": "button_style",
          "label": "Button Style",
          "default": "btn-primary",
          "options": [
            { "value": "btn-primary", "label": "Primary" },
            { "value": "btn-outline", "label": "Outline" },
            { "value": "btn-secondary", "label": "Secondary" }
          ]
        },
        {
          "type": "select",
          "id": "button_size",
          "label": "Button Size",
          "default": "btn-lg",
          "options": [
            { "value": "btn-sm", "label": "Small" },
            { "value": "btn-md", "label": "Medium" },
            { "value": "btn-lg", "label": "Large" }
          ]
        }
      ]
    },
    {
      "type": "hero-feature",
      "name": "Hero Feature",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Feature Text",
          "default": "Smart Technology"
        },
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "default": "check",
          "options": [
            { "value": "check", "label": "Check" },
            { "value": "star", "label": "Star" },
            { "value": "shield", "label": "Shield" },
            { "value": "truck", "label": "Truck" },
            { "value": "clock", "label": "Clock" },
            { "value": "heart", "label": "Heart" }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Optimized",
      "blocks": [
        {
          "type": "cta_button",
          "settings": {
            "text": "Shop Now",
            "button_style": "btn-primary",
            "button_size": "btn-lg"
          }
        },
        {
          "type": "cta_button",
          "settings": {
            "text": "Learn More",
            "button_style": "btn-outline",
            "button_size": "btn-lg"
          }
        },
        {
          "type": "hero-feature",
          "settings": {
            "text": "Smart Technology",
            "icon": "check"
          }
        },
        {
          "type": "hero-feature",
          "settings": {
            "text": "Energy Efficient",
            "icon": "star"
          }
        },
        {
          "type": "hero-feature",
          "settings": {
            "text": "Premium Quality",
            "icon": "shield"
          }
        },
        {
          "type": "hero-feature",
          "settings": {
            "text": "5-Year Warranty",
            "icon": "truck"
          }
        }
      ]
    }
  ]
}
{% endschema %}
