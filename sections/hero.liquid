{% comment %}
  Hero section inspired by Typhur's modern design
  Features: Large hero image, compelling headline, CTA buttons, and product showcase
{% endcomment %}

<div class="hero min-h-screen bg-gradient-to-br from-base-100 to-base-200">
  <div class="hero-content flex-col lg:flex-row-reverse max-w-7xl mx-auto">
    <div class="lg:w-1/2">
      <div class="indicator">
        {% if section.settings.badge_text != blank %}
          <span class="indicator-item indicator-start badge badge-primary badge-lg font-semibold">
            {{ section.settings.badge_text }}
          </span>
        {% endif %}
        <img
          src="{{ section.settings.hero_image | image_url: width: 800 }}"
          alt="{{ section.settings.hero_image.alt | default: 'Hero Product' }}"
          class="mask mask-squircle shadow-2xl w-full"
          width="800"
          height="600"
        >
      </div>
    </div>

    <div class="lg:w-1/2 lg:pr-12">
      <h1 class="text-5xl lg:text-6xl font-bold leading-tight mb-6">
        {{ section.settings.headline | default: 'Revolutionary Kitchen Innovation' }}
      </h1>

      <p class="text-xl text-base-content/80 mb-8 leading-relaxed">
        {{
          section.settings.subheadline
          | default: 'Experience the future of cooking with our cutting-edge technology that transforms your kitchen into a culinary powerhouse.'
        }}
      </p>

      <div class="join join-vertical sm:join-horizontal gap-4 mb-8">
        <a
          href="{{ section.settings.primary_cta_url | default: '/collections/all' }}"
          class="btn btn-primary btn-lg join-item"
        >
          {{ section.settings.primary_cta_text | default: 'Shop Now' }}
        </a>
        <a
          href="{{ section.settings.secondary_cta_url | default: '/pages/about' }}"
          class="btn btn-outline btn-lg join-item"
        >
          {{ section.settings.secondary_cta_text | default: 'Learn More' }}
        </a>
      </div>

      {% if section.settings.features != blank %}
        <div class="grid grid-cols-2 gap-4">
          {% for feature in section.settings.features %}
            <div class="flex items-center gap-3">
              <div class="avatar placeholder">
                <div class="bg-primary text-primary-content rounded-full w-8">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                </div>
              </div>
              <span class="text-sm font-medium">{{ feature }}</span>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "New"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "Revolutionary Kitchen Innovation"
    },
    {
      "type": "textarea",
      "id": "subheadline",
      "label": "Subheadline",
      "default": "Experience the future of cooking with our cutting-edge technology that transforms your kitchen into a culinary powerhouse."
    },
    {
      "type": "text",
      "id": "primary_cta_text",
      "label": "Primary CTA Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "primary_cta_url",
      "label": "Primary CTA URL"
    },
    {
      "type": "text",
      "id": "secondary_cta_text",
      "label": "Secondary CTA Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "secondary_cta_url",
      "label": "Secondary CTA URL"
    },
    {
      "type": "text",
      "id": "features",
      "label": "Features (comma separated)",
      "default": "Smart Technology,Energy Efficient,Premium Quality,5-Year Warranty"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
