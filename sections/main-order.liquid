{% comment %}
  This section is used in the customer order template to render order details.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/customers/order
{% endcomment %}

<div class="container mx-auto p-6">
  <div class="mb-8">
    <h1 class="text-4xl font-bold mb-4">{{ 'customers.order.title' | t: name: order.name }}</h1>
    <a href="{{ routes.account_url }}" class="link link-primary"> ‚Üê {{ 'customers.order.return_to_account' | t }} </a>
  </div>

  {% comment %} Order Status {% endcomment %}
  <div class="card bg-base-100 shadow-xl mb-8">
    <div class="card-body">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div>
          <h3 class="font-bold text-lg mb-2">{{ 'customers.order.order_date' | t }}</h3>
          <p>{{ order.created_at | date: '%B %d, %Y at %I:%M %p' }}</p>
        </div>
        <div>
          <h3 class="font-bold text-lg mb-2">{{ 'customers.order.payment_status' | t }}</h3>
          <span class="badge badge-{{ order.financial_status_label | downcase | replace: ' ', '-' }}">
            {{ order.financial_status_label }}
          </span>
        </div>
        <div>
          <h3 class="font-bold text-lg mb-2">{{ 'customers.order.fulfillment_status' | t }}</h3>
          <span class="badge badge-{{ order.fulfillment_status_label | downcase | replace: ' ', '-' }}">
            {{ order.fulfillment_status_label }}
          </span>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    {% comment %} Order Items {% endcomment %}
    <div class="lg:col-span-2">
      <h2 class="text-2xl font-bold mb-6">{{ 'customers.order.items' | t }}</h2>
      <div class="space-y-4">
        {% for line_item in order.line_items %}
          <div class="card bg-base-100 shadow-xl">
            <div class="card-body">
              <div class="flex gap-4">
                {% if line_item.image %}
                  <div class="flex-shrink-0">
                    {% render 'image',
                      image: line_item.image,
                      url: line_item.product.url,
                      class: 'w-20 h-20 rounded object-cover'
                    %}
                  </div>
                {% endif %}
                <div class="flex-grow">
                  <h3 class="font-bold text-lg">
                    <a href="{{ line_item.product.url }}" class="link link-primary">
                      {{ line_item.product.title }}
                    </a>
                  </h3>
                  {% if line_item.variant.title != 'Default Title' %}
                    <p class="text-sm opacity-70">{{ line_item.variant.title }}</p>
                  {% endif %}
                  <div class="flex justify-between items-center mt-2">
                    <span class="text-sm">{{ 'customers.order.quantity' | t }}: {{ line_item.quantity }}</span>
                    <span class="font-bold">{{ line_item.final_line_price | money }}</span>
                  </div>
                  {% if line_item.fulfillment %}
                    <div class="mt-2">
                      <p class="text-sm">
                        <span class="font-semibold">{{ 'customers.order.fulfilled' | t }}:</span>
                        {{ line_item.fulfillment.created_at | date: '%B %d, %Y' }}
                      </p>
                      {% if line_item.fulfillment.tracking_number %}
                        <p class="text-sm">
                          <span class="font-semibold">{{ 'customers.order.tracking_number' | t }}:</span>
                          {{ line_item.fulfillment.tracking_number }}
                        </p>
                        {% if line_item.fulfillment.tracking_url %}
                          <a href="{{ line_item.fulfillment.tracking_url }}" class="link link-primary text-sm">
                            {{ 'customers.order.track_shipment' | t }}
                          </a>
                        {% endif %}
                      {% endif %}
                    </div>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>

    {% comment %} Order Summary {% endcomment %}
    <div>
      <h2 class="text-2xl font-bold mb-6">{{ 'customers.order.summary' | t }}</h2>

      {% comment %} Shipping Address {% endcomment %}
      {% if order.shipping_address %}
        <div class="card bg-base-100 shadow-xl mb-6">
          <div class="card-body">
            <h3 class="card-title">{{ 'customers.order.shipping_address' | t }}</h3>
            <div class="text-sm">
              <div>
                {{ order.shipping_address.first_name }}
                {{ order.shipping_address.last_name }}
              </div>
              {% if order.shipping_address.company %}
                <div>{{ order.shipping_address.company }}</div>
              {% endif %}
              <div>{{ order.shipping_address.address1 }}</div>
              {% if order.shipping_address.address2 %}
                <div>{{ order.shipping_address.address2 }}</div>
              {% endif %}
              <div>
                {{ order.shipping_address.city }}, {{ order.shipping_address.province }}
                {{ order.shipping_address.zip }}
              </div>
              <div>{{ order.shipping_address.country }}</div>
              {% if order.shipping_address.phone %}
                <div>{{ order.shipping_address.phone }}</div>
              {% endif %}
            </div>
          </div>
        </div>
      {% endif %}

      {% comment %} Billing Address {% endcomment %}
      {% if order.billing_address %}
        <div class="card bg-base-100 shadow-xl mb-6">
          <div class="card-body">
            <h3 class="card-title">{{ 'customers.order.billing_address' | t }}</h3>
            <div class="text-sm">
              <div>
                {{ order.billing_address.first_name }}
                {{ order.billing_address.last_name }}
              </div>
              {% if order.billing_address.company %}
                <div>{{ order.billing_address.company }}</div>
              {% endif %}
              <div>{{ order.billing_address.address1 }}</div>
              {% if order.billing_address.address2 %}
                <div>{{ order.billing_address.address2 }}</div>
              {% endif %}
              <div>
                {{ order.billing_address.city }}, {{ order.billing_address.province }}
                {{ order.billing_address.zip }}
              </div>
              <div>{{ order.billing_address.country }}</div>
              {% if order.billing_address.phone %}
                <div>{{ order.billing_address.phone }}</div>
              {% endif %}
            </div>
          </div>
        </div>
      {% endif %}

      {% comment %} Order Totals {% endcomment %}
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h3 class="card-title">{{ 'customers.order.totals' | t }}</h3>
          <div class="space-y-2 text-sm">
            <div class="flex justify-between">
              <span>{{ 'customers.order.subtotal' | t }}:</span>
              <span>{{ order.subtotal_price | money }}</span>
            </div>
            {% for discount in order.discounts %}
              <div class="flex justify-between text-success">
                <span>{{ 'customers.order.discount' | t }} ({{ discount.code }}):</span>
                <span>-{{ discount.amount | money }}</span>
              </div>
            {% endfor %}
            {% for shipping_method in order.shipping_methods %}
              <div class="flex justify-between">
                <span>{{ 'customers.order.shipping' | t }} ({{ shipping_method.title }}):</span>
                <span>{{ shipping_method.price | money }}</span>
              </div>
            {% endfor %}
            {% for tax_line in order.tax_lines %}
              <div class="flex justify-between">
                <span>{{ 'customers.order.tax' | t }} ({{ tax_line.title }}):</span>
                <span>{{ tax_line.price | money }}</span>
              </div>
            {% endfor %}
            <div class="divider"></div>
            <div class="flex justify-between font-bold text-lg">
              <span>{{ 'customers.order.total' | t }}:</span>
              <span>{{ order.total_price | money }}</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:customers.order.title",
  "settings": []
}
{% endschema %}
