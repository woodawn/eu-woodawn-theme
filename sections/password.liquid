{% comment %}
  This section is used in the password template to render landing page shown
  when password protection is applied to a store.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/password
{% endcomment %}

<div class="min-h-screen flex items-center justify-center bg-base-200">
  <div class="card w-full max-w-md bg-base-100 shadow-xl">
    <div class="card-body">
      <h1 class="card-title text-3xl font-bold text-center mb-6">{{ 'password.title' | t }}</h1>

      {% if shop.password_message %}
        <p class="text-center mb-6">{{ shop.password_message }}</p>
      {% endif %}

      {% form 'storefront_password', class: 'space-y-4' %}
        {% if form.errors %}
          <div class="alert alert-error">
            {{ form.errors | default_errors }}
          </div>
        {% endif %}

        <div class="form-control w-full">
          <label class="label" for="password-input">
            <span class="label-text">{{ 'password.password' | t }}</span>
          </label>
          <input
            type="password"
            name="password"
            id="password-input"
            class="input input-bordered w-full"
            placeholder="输入密码"
          >
        </div>

        <button type="submit" class="btn btn-primary w-full">
          {{ 'password.enter' | t }}
        </button>
      {% endform %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:general.password",
  "settings": []
}
{% endschema %}
