{% comment %}
  Typhur-inspired Product Page
  Features: Image gallery, variant selector, specifications, reviews, and modern design
{% endcomment %}

<div class="min-h-screen bg-base-100">
  <!-- Product Hero Section -->
  <div class="container mx-auto px-6 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Product Images -->
      <div class="product-gallery">
        <!-- Main Image -->
        <div class="mb-6">
          <div class="relative overflow-hidden rounded-2xl shadow-2xl bg-base-200">
            {% if product.featured_image %}
              <img
                id="main-product-image"
                src="{{ product.featured_image | image_url: width: 800 }}"
                alt="{{ product.featured_image.alt | default: product.title }}"
                class="w-full h-96 lg:h-[500px] object-cover cursor-zoom-in"
                width="800"
                height="500"
                onclick="openImageModal(this.src)"
              >
            {% endif %}

            <!-- Image Zoom Indicator -->
            <div class="absolute top-4 right-4 opacity-0 hover:opacity-100 transition-opacity duration-300">
              <div class="bg-black/50 text-white px-3 py-1 rounded-full text-sm">
                <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"></path>
                </svg>
                Click to zoom
              </div>
            </div>

            <!-- Sale Badge -->
            {% if product.compare_at_price > product.price %}
              <div class="absolute top-4 left-4">
                <div class="badge badge-error badge-lg">
                  {{
                    product.compare_at_price
                    | minus: product.price
                    | times: 100
                    | divided_by: product.compare_at_price
                    | round
                  -}}
                  % OFF
                </div>
              </div>
            {% endif %}
          </div>
        </div>

        <!-- Thumbnail Images -->
        {% if product.images.size > 1 %}
          <div class="grid grid-cols-4 gap-3">
            {% for image in product.images limit: 4 %}
              <div
                class="relative overflow-hidden rounded-lg cursor-pointer border-2 transition-all duration-300 {% if forloop.first %}border-primary{% else %}border-transparent{% endif %}"
                onclick="changeMainImage('{{ image | image_url: width: 800 }}', this)"
              >
                <img
                  src="{{ image | image_url: width: 200 }}"
                  alt="{{ image.alt | default: product.title }}"
                  class="w-full h-20 object-cover hover:scale-105 transition-transform duration-300"
                  width="200"
                  height="80"
                >
              </div>
            {% endfor %}

            {% if product.images.size > 4 %}
              <div
                class="relative overflow-hidden rounded-lg border-2 border-dashed border-base-300 flex items-center justify-center cursor-pointer"
                onclick="showAllImages()"
              >
                <div class="text-center">
                  <div class="text-2xl font-bold text-base-content/50">+{{ product.images.size | minus: 4 }}</div>
                  <div class="text-xs text-base-content/50">More</div>
                </div>
              </div>
            {% endif %}
          </div>
        {% endif %}
      </div>

      <!-- Product Information -->
      <div class="product-info">
        <!-- Breadcrumb -->
        <nav class="breadcrumbs text-sm mb-6">
          <ul>
            <li><a href="{{ routes.root_url }}" class="hover:text-primary">Home</a></li>
            {% if collection %}
              <li>
                <a href="{{ collection.url }}" class="hover:text-primary">{{ collection.title }}</a>
              </li>
            {% endif %}
            <li>{{ product.title }}</li>
          </ul>
        </nav>

        <!-- Product Title -->
        <h1 class="text-3xl lg:text-4xl font-bold mb-4">{{ product.title }}</h1>

        <!-- Product Rating -->
        {% if product.metafields.reviews.rating.value %}
          <div class="flex items-center gap-3 mb-4">
            <div class="rating rating-sm">
              {% assign rating = product.metafields.reviews.rating.value %}
              {% for i in (1..5) %}
                {% if i <= rating %}
                  <input type="radio" class="mask mask-star-2 bg-warning" disabled>
                {% else %}
                  <input type="radio" class="mask mask-star-2 bg-base-300" disabled>
                {% endif %}
              {% endfor %}
            </div>
            <span class="text-sm text-base-content/70">
              {{ product.metafields.reviews.rating.value }}/5 (
              {{- product.metafields.reviews.rating_count.value }}
              reviews)
            </span>
            <a href="#reviews" class="text-sm text-primary hover:underline">View Reviews</a>
          </div>
        {% endif %}

        <!-- Price -->
        <div class="mb-6">
          {% if product.compare_at_price > product.price %}
            <div class="flex items-center gap-3">
              <span class="text-3xl font-bold text-primary product-price">{{ product.price | money }}</span>
              <span class="text-xl text-base-content/50 line-through">{{ product.compare_at_price | money }}</span>
              <span class="badge badge-success"
                >Save {{ product.compare_at_price | minus: product.price | money -}}
              </span>
            </div>
          {% else %}
            <span class="text-3xl font-bold text-primary product-price">{{ product.price | money }}</span>
          {% endif %}
        </div>

        <!-- Product Description -->
        {% if product.description != blank %}
          <div class="prose max-w-none mb-6">
            {{ product.description }}
          </div>
        {% endif %}

        <!-- Product Form -->
        <div class="product-form mb-8">
          {% form 'product', product, class: 'space-y-6' %}
            {% assign current_variant = product.selected_or_first_available_variant %}

            <!-- Hidden variant input -->
            <input type="hidden" name="id" value="{{ current_variant.id }}">

            <!-- Variant Selection -->
            {% if product.variants.size > 1 %}
              <div class="space-y-4">
                {% for option in product.options_with_values %}
                  <div class="form-control">
                    <label class="label">
                      <span class="label-text font-semibold">{{ option.name }}</span>
                    </label>
                    <div class="flex flex-wrap gap-2">
                      {% for value in option.values %}
                        <button
                          type="button"
                          class="btn btn-outline btn-sm variant-option"
                          data-option="{{ option.name }}"
                          data-value="{{ value }}"
                          onclick="selectVariant('{{ option.name }}', '{{ value }}')"
                        >
                          {{ value }}
                        </button>
                      {% endfor %}
                    </div>
                  </div>
                {% endfor %}
              </div>
            {% endif %}

            <!-- Quantity -->
            <div class="form-control">
              <label class="label">
                <span class="label-text font-semibold">{{ 'products.quantity' | t }}</span>
              </label>
              <div class="flex items-center gap-3">
                <button type="button" class="btn btn-outline btn-sm" onclick="decreaseQuantity()">-</button>
                <input
                  type="number"
                  id="quantity"
                  name="quantity"
                  min="1"
                  value="1"
                  class="input input-bordered w-20 text-center"
                  readonly
                >
                <button type="button" class="btn btn-outline btn-sm" onclick="increaseQuantity()">+</button>
              </div>
            </div>

            <!-- Add to Cart -->
            <div class="space-y-3">
              {% if current_variant.available %}
                <button type="submit" class="btn btn-primary btn-lg w-full">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 5M7 13l2.5 5m6-5v6a2 2 0 01-2 2H9a2 2 0 01-2-2v-6m8 0V9a2 2 0 00-2-2H9a2 2 0 00-2 2v4.01"></path>
                  </svg>
                  {{ 'products.add_to_cart' | t }} - {{ current_variant.price | money }}
                </button>
                {{ form | payment_button }}
              {% else %}
                <button class="btn btn-disabled btn-lg w-full">{{ 'products.sold_out' | t }}</button>
              {% endif %}
            </div>

            <!-- Product Features -->
            <div class="grid grid-cols-2 gap-4 mt-6">
              <div class="flex items-center gap-2 text-sm">
                <svg class="w-5 h-5 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Free Shipping</span>
              </div>
              <div class="flex items-center gap-2 text-sm">
                <svg class="w-5 h-5 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>30-Day Returns</span>
              </div>
              <div class="flex items-center gap-2 text-sm">
