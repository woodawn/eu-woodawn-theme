{% comment %}
  Product Compare Button - Add product to comparison

  Accepts:
  - product: {Object} Product object
  - class: {String} CSS classes to apply

  Usage:
  {% render 'product-compare', product: product %}
{% endcomment %}

<button
  class="btn btn-outline btn-sm compare-btn {{ class }}"
  data-compare-toggle
  data-product-id="{{ product.id }}"
  data-product-title="{{ product.title | escape }}"
  data-product-image="{{ product.featured_image | image_url: width: 300 }}"
  data-product-url="{{ product.url }}"
  data-product-price="{{ product.price }}"
  data-product-vendor="{{ product.vendor | escape }}"
  data-product-type="{{ product.type | escape }}"
  title="Add to comparison"
>
  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
  </svg>
  Compare
</button>
